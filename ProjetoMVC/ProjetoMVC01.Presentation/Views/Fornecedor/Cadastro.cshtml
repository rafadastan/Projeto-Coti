@model ProjetoMVC01.Presentation.Models.FornecedorCadastroViewModel;

@{
    ViewData["Title"] = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5>Cadastro de Fornecedor</h5>
<p>Preencha o formulário abaixo:</p>
<hr />

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm())
        {
            <label>Nome do Fornecedor:</label>
            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control" })
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
            <br />

            <label>CNPJ:</label>
            @Html.TextBoxFor(model => model.Cnpj, new { @class = "form-control" })
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Cnpj)
            </div>
            <br />

            <input type="submit" value="Cadastrar Fornecedor"
                   class="btn btn-success" />
        }

    </div>
</div>
