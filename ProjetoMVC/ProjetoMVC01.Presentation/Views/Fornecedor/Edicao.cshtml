@model ProjetoMVC01.Presentation.Models.FornecedorEdicaoViewModel

@{
    ViewData["Title"] = "Edicao";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h5>Alteração de Fornecedor</h5>
<p>Utilize o formulário abaixo:</p>
<hr />

<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm())
        {
            <!-- campo oculto -->
            @Html.HiddenFor(model => model.IdFornecedor)

            <label>Nome do Fornecedor:</label>
            @Html.TextBoxFor(model => model.Nome,
                new
                {
                    @class = "form-control"
                })
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Nome)
            </div>
            <br />

            <label>CNPJ:</label>
            @Html.TextBoxFor(model => model.Cnpj,
                new
                {
                    @class = "form-control"
                })
            <div class="text-danger">
                @Html.ValidationMessageFor(model => model.Cnpj)
            </div>
            <br />

            <input type="submit" value="Salvar Alterações"
                   class="btn btn-primary" />
        }
    </div>
</div>


